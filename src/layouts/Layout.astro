---
import '@/styles/globals.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "SmartGadgets - Electronics for Every Need in Liberia" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="font-sans bg-white">
    <!-- Header Navigation -->
    <header class="bg-white shadow-sm border-b sticky top-0 z-40">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <!-- Logo -->
          <a href="/" class="flex items-center space-x-2">
            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
              <span class="text-white font-bold text-lg">S</span>
            </div>
            <span class="text-xl font-bold text-gray-900">SmartGadgets</span>
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-8">
            <a href="/" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
            <a href="/shop" class="text-gray-700 hover:text-blue-600 font-medium">Shop</a>
            <a href="/shop?category=phones" class="text-gray-700 hover:text-blue-600 font-medium">Phones</a>
            <a href="/shop?category=computers" class="text-gray-700 hover:text-blue-600 font-medium">Computers</a>
            <a href="/shop?category=accessories" class="text-gray-700 hover:text-blue-600 font-medium">Accessories</a>
            <a href="/track-order" class="text-gray-700 hover:text-blue-600 font-medium">Track Order</a>
          </div>

          <!-- Cart and Search -->
          <div class="flex items-center space-x-4">
            <!-- Search Button (Mobile) -->
            <button class="md:hidden p-2 text-gray-600 hover:text-blue-600" id="mobile-search-btn">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </button>

            <!-- Desktop Search -->
            <div class="hidden md:block relative">
              <form action="/shop" method="get" class="relative">
                <input type="text" 
                       name="search"
                       placeholder="Search products..." 
                       class="w-64 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       id="desktop-search">
                <button type="submit" class="absolute right-3 top-2.5 text-gray-400">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                </button>
              </form>
            </div>

            <!-- Cart Button -->
            <a href="/cart" class="relative p-2 text-gray-600 hover:text-blue-600" id="cart-btn">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 8M7 13l2.5 8m6-8v8a2 2 0 01-2 2H9a2 2 0 01-2-2v-8m8-8V3a2 2 0 00-2-2H9a2 2 0 00-2 2v2"></path>
              </svg>
              <span class="absolute -top-1 -right-1 bg-blue-600 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center" id="cart-count">0</span>
            </a>

            <!-- Mobile Menu Button -->
            <button class="md:hidden p-2 text-gray-600" id="mobile-menu-btn">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile Search Bar -->
        <div class="md:hidden mt-4 hidden" id="mobile-search">
          <form action="/shop" method="get">
            <input type="text" 
                   name="search"
                   placeholder="Search products..." 
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
          </form>
        </div>

        <!-- Mobile Navigation Menu -->
        <div class="md:hidden mt-4 hidden" id="mobile-menu">
          <div class="space-y-2 pb-4">
            <a href="/" class="block py-2 text-gray-700 hover:text-blue-600">Home</a>
            <a href="/shop" class="block py-2 text-gray-700 hover:text-blue-600">Shop</a>
            <a href="/shop?category=phones" class="block py-2 text-gray-700 hover:text-blue-600">Phones</a>
            <a href="/shop?category=computers" class="block py-2 text-gray-700 hover:text-blue-600">Computers</a>
            <a href="/shop?category=accessories" class="block py-2 text-gray-700 hover:text-blue-600">Accessories</a>
            <a href="/track-order" class="block py-2 text-gray-700 hover:text-blue-600">Track Order</a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <slot />

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <!-- Company Info -->
          <div>
            <div class="flex items-center space-x-2 mb-4">
              <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                <span class="text-white font-bold text-lg">S</span>
              </div>
              <span class="text-xl font-bold">SmartGadgets</span>
            </div>
            <p class="text-gray-400 mb-4">
              Your trusted electronics store in Liberia. Quality products, fast delivery, and excellent customer service.
            </p>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-400 hover:text-white">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                </svg>
