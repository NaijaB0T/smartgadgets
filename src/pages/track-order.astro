---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Track Your Order | SmartGadgets">
  <main class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-8 text-center">Track Your Order</h1>
        
        <div class="bg-white rounded-lg shadow-sm p-8">
          <div class="mb-6">
            <label for="order-id" class="block text-sm font-medium text-gray-700 mb-2">
              Order ID
            </label>
            <input type="text" 
                   id="order-id" 
                   name="order-id"
                   placeholder="Enter your order ID"
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                   required>
          </div>

          <div class="mb-6">
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Email Address
            </label>
            <input type="email" 
                   id="email" 
                   name="email"
                   placeholder="Enter your email address"
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                   required>
          </div>

          <button type="submit" 
                  class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-blue-700 transition-colors"
                  id="track-btn">
            Track Order
          </button>
        </div>

        <!-- Order Status Section (initially hidden) -->
        <div class="mt-8 bg-white rounded-lg shadow-sm p-8 hidden" id="order-status">
          <h2 class="text-xl font-semibold mb-6">Order Status</h2>
          
          <div class="space-y-4">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center text-white text-sm font-medium mr-4">
                âœ“
              </div>
              <div>
                <div class="font-medium">Order Confirmed</div>
                <div class="text-sm text-gray-600">Your order has been received and confirmed</div>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white text-sm font-medium mr-4">
                2
              </div>
              <div>
                <div class="font-medium">Processing</div>
                <div class="text-sm text-gray-600">Your order is being prepared</div>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center text-white text-sm font-medium mr-4">
                3
              </div>
              <div>
                <div class="font-medium text-gray-500">Shipped</div>
                <div class="text-sm text-gray-400">Your order will be shipped soon</div>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center text-white text-sm font-medium mr-4">
                4
              </div>
              <div>
                <div class="font-medium text-gray-500">Delivered</div>
                <div class="text-sm text-gray-400">Your order will be delivered</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Help Section -->
        <div class="mt-8 bg-blue-50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-blue-900 mb-2">Need Help?</h3>
          <p class="text-blue-800 mb-4">
            If you can't find your order or need assistance, please contact our customer service team.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors text-center">
              Contact Support
            </a>
            <a href="tel:+231777123456" class="bg-white text-blue-600 border border-blue-600 px-6 py-2 rounded-lg hover:bg-blue-50 transition-colors text-center">
              Call +231-777-123-456
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const trackBtn = document.getElementById('track-btn');
    const orderStatus = document.getElementById('order-status');
    
    if (trackBtn) {
      trackBtn.addEventListener('click', function(e) {
        e.preventDefault();
        
        const orderId = document.getElementById('order-id').value;
        const email = document.getElementById('email').value;
        
        if (!orderId || !email) {
          alert('Please enter both Order ID and Email Address');
          return;
        }
        
        // Show loading state
        trackBtn.textContent = 'Tracking...';
        trackBtn.disabled = true;
        
        // Simulate API call
        setTimeout(() => {
          // Show order status
          orderStatus.classList.remove('hidden');
          
          // Reset button
          trackBtn.textContent = 'Track Order';
          trackBtn.disabled = false;
          
          // Scroll to results
          orderStatus.scrollIntoView({ behavior: 'smooth' });
        }, 1500);
      });
    }
  });
</script>