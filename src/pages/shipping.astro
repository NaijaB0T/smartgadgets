---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Shipping Information | SmartGadgets">
  <main class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Shipping Information</h1>
        
        <div class="space-y-6">
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-xl font-semibold mb-4">Shipping Options</h2>
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-blue-600 rounded-full mt-2"></div>
                <div>
                  <h3 class="font-medium text-gray-900">Standard Delivery (Free)</h3>
                  <p class="text-gray-600">1-3 business days within Monrovia</p>
                  <p class="text-gray-600">3-7 business days to other areas in Liberia</p>
                </div>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-blue-600 rounded-full mt-2"></div>
                <div>
                  <h3 class="font-medium text-gray-900">Express Delivery</h3>
                  <p class="text-gray-600">Same day delivery within Monrovia (additional charges apply)</p>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-xl font-semibold mb-4">Delivery Areas</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <h3 class="font-medium text-gray-900 mb-2">Monrovia Area</h3>
                <ul class="text-gray-600 space-y-1">
                  <li>• Broad Street</li>
                  <li>• Sinkor</li>
                  <li>• Congo Town</li>
                  <li>• Paynesville</li>
                  <li>• New Kru Town</li>
                </ul>
              </div>
              <div>
                <h3 class="font-medium text-gray-900 mb-2">Other Counties</h3>
                <ul class="text-gray-600 space-y-1">
                  <li>• Margibi County</li>
                  <li>• Bomi County</li>
                  <li>• Grand Bassa County</li>
                  <li>• Nimba County</li>
                  <li>• Other counties (contact us)</li>
                </ul>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-xl font-semibold mb-4">Important Notes</h2>
            <ul class="space-y-2 text-gray-600">
              <li>• All orders are processed during business hours (9 AM - 6 PM, Monday - Saturday)</li>
              <li>• Orders placed after 3 PM may be processed the next business day</li>
              <li>• We require a valid phone number and address for delivery</li>
              <li>• Someone must be available to receive the package at the delivery address</li>
              <li>• We will contact you before delivery to confirm availability</li>
            </ul>
          </div>
        </div>

        <div class="mt-8 bg-blue-50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-blue-900 mb-2">Need Help?</h3>
          <p class="text-blue-800 mb-4">
            Contact our customer service team for any shipping-related questions.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors text-center">
              Contact Us
            </a>
            <a href="tel:+231777123456" class="bg-white text-blue-600 border border-blue-600 px-6 py-2 rounded-lg hover:bg-blue-50 transition-colors text-center">
              Call +231-777-123-456
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>